set encoding=utf-8

let g:instant_markdown_slow = 1
let g:DisableAutoPHPFolding = 1
let g:PIVAutoClose = 1

let g:solarized_termcolors=16
color symfony "Load a colorscheme

set foldmethod=manual "另需要手动修改PIV/syntax/php.vim
set nobackup

:map <leader>d :bd<cr>
